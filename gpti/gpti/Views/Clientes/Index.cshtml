@model IEnumerable<gpti.Models.Clientes>

@{
    ViewData["Title"] = "Index";
    double ct = 0;
}

<style>
    .container div .texto {
        font-size: 0.9em;
    }
</style>

<h3>Clientes</h3>

<p>
    <a asp-action="Create">Incluir</a>
</p>
<div class="row">
    <div class="col-xs-2 texto">
        <strong>
            @Html.DisplayNameFor(model => model.Nome)
        </strong>
    </div>
    <div class="col-xs-1 texto">
        <strong>
            @Html.DisplayNameFor(model => model.Cidade)
        </strong>
    </div>
    <div class="col-xs-1 texto">
        <strong>
            @Html.DisplayNameFor(model => model.Estado)
        </strong>
    </div>
    <div class="col-xs-1 texto">
        <strong>
            @Html.DisplayNameFor(model => model.Telefone)
        </strong>
    </div>
    <div class="col-xs-2 texto">
        <strong>
            @Html.DisplayNameFor(model => model.E_mail)
        </strong>
    </div>
    <div class="col-xs-1 texto">
        <strong>
            @Html.DisplayNameFor(model => model.Sistema)
        </strong>
    </div>
    <div class="col-xs-1 texto">
        <strong>
            @Html.DisplayNameFor(model => model.Login)
        </strong>
    </div>
    <div class="col-xs-1 texto">
        <strong>
            @Html.DisplayNameFor(model => model.Autorizado)
        </strong>
    </div>
    <div class="col-xs-1 texto">
        <strong>
            @Html.DisplayNameFor(model => model.DtUltAcesso)
        </strong>
    </div>
    <div class="col-xs-1">
        &nbsp;
    </div>
</div>

@foreach (var item in Model)
{
    ct++;
    string estilo_linha = (ct % 2 != 0 ? "background-color:#F5F5F5;" : "");
<div class="row" style=@estilo_linha>
    <div class="col-xs-2 texto">
        @Html.DisplayFor(modelItem => item.Nome)
    </div>
    <div class="col-xs-1 texto">
        @Html.DisplayFor(modelItem => item.Cidade)
    </div>
    <div class="col-xs-1 texto">
        @Html.DisplayFor(modelItem => item.Estado)
    </div>
    <div class="col-xs-1 texto">
        @Html.DisplayFor(modelItem => item.Telefone)
    </div>
    <div class="col-xs-2 texto">
        @Html.DisplayFor(modelItem => item.E_mail)
    </div>
    <div class="col-xs-1 texto">
        @Html.DisplayFor(modelItem => item.Sistema)
    </div>
    <div class="col-xs-1 texto">
        @Html.DisplayFor(modelItem => item.Login)
    </div>
    <div class="col-xs-1 texto">
        @Html.DisplayFor(modelItem => item.Autorizado)
    </div>
    <div class="col-xs-1 texto">
        @Html.DisplayFor(modelItem => item.DtUltAcesso)
    </div>
    <div class="col-xs-1">
        <a asp-action="Edit" asp-route-id="@item.Id"><span style="font-size: 1.2em; color: darkgreen;"><i class="fas fa-edit"></i></span></a>
        <a asp-action="Details" asp-route-id="@item.Id"><span style="font-size: 1.2em; color: Dodgerblue;"><i class="fas fa-search"></i></span></a>
        <a asp-action="Delete" asp-route-id="@item.Id"><span style="font-size: 1.2em; color: red;"><i class="fas fa-trash-alt"></i></span></a>
    </div>
</div>
}
