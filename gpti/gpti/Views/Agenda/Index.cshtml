@model IEnumerable<gpti.Models.Agenda>

@{
    ViewData["Title"] = "Index";
}

<h1>Agenda</h1>

<p>
    <a asp-action="Create">Incluir</a>
</p>
<div class="row">
    <div class="col-xs-1">
        @Html.DisplayNameFor(model => model.Data)
    </div>
    <div class="col-xs-1">
        @Html.DisplayNameFor(model => model.Hora)
    </div>
    <div class="col-xs-2">
        @Html.DisplayNameFor(model => model.ContInt)
    </div>
    <div class="col-xs-2">
        @Html.DisplayNameFor(model => model.ContExt)
    </div>
    <div class="col-xs-2">
        @Html.DisplayNameFor(model => model.Local)
    </div>
    <div class="col-xs-1">
        @Html.DisplayNameFor(model => model.TelCont)
    </div>
    <div class="col-xs-2">
        @Html.DisplayNameFor(model => model.Descricao)
    </div>
    <div class="col-xs-1">
        &nbsp;
    </div>
</div>

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-xs-1">
            @Html.DisplayFor(modelItem => item.Data)
        </div>
        <div class="col-xs-1">
            @Html.DisplayFor(modelItem => item.Hora)
        </div>
        <div class="col-xs-2">
            @Html.DisplayFor(modelItem => item.ContInt)
        </div>
        <div class="col-xs-2">
            @Html.DisplayFor(modelItem => item.ContExt)
        </div>
        <div class="col-xs-2">
            @Html.DisplayFor(modelItem => item.Local)
        </div>
        <div class="col-xs-1">
            @Html.DisplayFor(modelItem => item.TelCont)
        </div>
        <div class="col-xs-2">
            @Html.DisplayFor(modelItem => item.Descricao)
        </div>
        <div class="col-xs-1">
            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Consultar</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
        </div>
    </div>
}
